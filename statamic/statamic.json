{
  "name": "statamic",
  "detectors": {
    "metaTagCheck": {
      "name": "generator",
      "contentRegex": "Statamic"
    },
    "globalVariables": ["Statamic"],
    "selectorExists": [
      "[data-statamic]",
      "[data-statamic-field]",
      "[data-statamic-handler]"
    ]
  },
  "themeDetection": {
    "cssLinkRegex": "/themes/([\\w-]+)/"
  }
} 